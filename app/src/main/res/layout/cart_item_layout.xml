<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <ImageView
                android:id="@+id/cartItemThumbnail"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="start"
                android:contentDescription="@string/item_picture"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="3dp"
            android:paddingRight="0dp"
            android:paddingStart="3dp">

            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/pcs"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/linear_remove">

                <ImageButton
                    android:id="@+id/cartItemRemove"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_icon_remove_pc"
                    android:contentDescription="@string/reduce_icon"/>

            </LinearLayout>

            <TextView
                android:id="@+id/cartItemPcs"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:ems="2"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/linear_add">

                <ImageView
                    android:id="@+id/cartItemAdd"
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:src="@drawable/item_icon_add_pc"
                    android:contentDescription="@string/add_icon"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/subTotal"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#343434"
            android:textSize="12sp"/>


        <ImageView
            android:id="@+id/cartItemDelete"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/item_icon_cancel_pc"
            android:contentDescription="@string/remove_icon"/>

    </LinearLayout>