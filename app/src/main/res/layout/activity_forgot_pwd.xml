<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitewebteam.deliverus.ForgotPwdActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kenya_code"
            android:id="@+id/kenyaCodeFP"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneFP"
            android:hint="@string/phone_prompt"
            android:inputType="phone"
            android:maxLength="8"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/kenyaCodeFP"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/kenyaCodeFP"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proceed_label"
            android:id="@+id/proceedFP"
            android:layout_below="@+id/phoneFP"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:onClick="proceedFP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/securityQTextViewFP"
            android:layout_below="@+id/proceedFP"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/securityQ"
            android:layout_below="@+id/securityQTextViewFP"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/securityAFP"
            android:layout_below="@+id/securityQ"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="@string/security_a_prompt"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_label"
            android:id="@+id/submit"
            android:layout_below="@+id/securityAFP"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:visibility="invisible"
            android:onClick="submit"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</RelativeLayout>
